@using Attribute_Reflection_UseCase1_UserInteraction_Templates.Helpers
@using Models.Metadata

@inherits TemplateBase
@attribute [Editable]
@attribute [StringLength(20)]

@Label:
<Radzen.Blazor.RadzenTextBox ValueChanged="(newValue) => HandleValueChanged(newValue)"></Radzen.Blazor.RadzenTextBox>

@code {
    [Parameter]
    public string? Value { get; set; }

    private void HandleValueChanged(string value)
    {
        Value = value;

        if (ValueChanged.HasDelegate)
        {
            this.ValueChanged.InvokeAsync(new ValueChangedArguments(value, PropertyInfo!, AccessorInstance!));
        }
    }
}
