@using Models.Metadata

@inherits TemplateBase
@attribute [ValueKind(typeof(bool))]

<div class=row>
	<div class=col-12>
		@Label:
		<Radzen.Blazor.RadzenSwitch Disabled @bind-Value="Value"></Radzen.Blazor.RadzenSwitch>
	</div>
</div>

@code {
	[Parameter]
	public string? Label { get; set; }

	[Parameter]
	public bool Value { get; set; }
}
