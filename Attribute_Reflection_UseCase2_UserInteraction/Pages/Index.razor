@page "/"
@using Models
@using Models.UseCases.IncludingUserInteraction.UseCase2

@if (details != null)
{
    if (!showGui)
    {
        <Radzen.Blazor.RadzenButton Text="Render GUI" Click="() => this.showGui = true"></Radzen.Blazor.RadzenButton>
    }

    @if (showGui)
    {
        performanceMonitor!.Start();
        <PersonalDetailsEditor PerformanceMonitor="performanceMonitor" Details="details"></PersonalDetailsEditor>
    }
}

@code {
    private bool showGui;
    private PersonalDetails? details;
    private PerformanceMonitor? performanceMonitor;

    protected override void OnInitialized()
    {
        showGui = false;
        details = new PersonalDetails();
        performanceMonitor = new PerformanceMonitor();
    }
}