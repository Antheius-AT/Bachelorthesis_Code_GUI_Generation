@inject AppState AppState

@if (IsShown)
{
    @if (Label != null)
{
    <label>@Label</label>
}
<Radzen.Blazor.RadzenTextBox Placeholder=@Label Value=@this.Value></Radzen.Blazor.RadzenTextBox>

}

@code {
    [Parameter]
    public string? Value{ get; set; }

    [Parameter]
    public string? Label { get; set; }

    [Parameter]
    public bool IsShown{ get; set; }

     protected override void OnInitialized()
    {
        AppState.ChangedEvent += this.HandleEvent;
    }

    private void HandleEvent(object? source, EventArgs e)
    {
        IsShown = AppState.Visible;
    }
}
