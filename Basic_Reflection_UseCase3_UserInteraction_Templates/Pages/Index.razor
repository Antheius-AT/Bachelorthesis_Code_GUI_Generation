@page "/"
@using Models
@using Models.UseCases.IncludingUserInteraction.UseCase3

@if (editTools != null)
{
    if (!showGui)
    {
        <Radzen.Blazor.RadzenButton Text="Render GUI" Click="() => this.showGui = true"></Radzen.Blazor.RadzenButton>
    }

    @if (showGui)
    {
        performanceMonitor!.Start();
        <ImageEditorComponent PerformanceMonitor="performanceMonitor" ToolBox="editTools"></ImageEditorComponent>
    }
}

@code {
    private bool showGui;
    private EditToolBox? editTools;
    private PerformanceMonitor? performanceMonitor;

    protected override void OnInitialized()
    {
        editTools = new EditToolBox();
        showGui = false;
        performanceMonitor = new PerformanceMonitor();
    }
}