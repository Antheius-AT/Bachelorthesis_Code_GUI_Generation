@using GeneratorSharedComponents
@using Models.UseCases.DisplayOnly.UseCase1

@inject AdaptiveInterfaceGenerator InterfaceGenerator

@if (UserModel != null && DeviceModel != null && InterfaceSpecification != null)
{
    @InterfaceGenerator.GenerateGUI(InterfaceSpecification, DeviceModel, UserModel)
}
@code {
    [Parameter]
    public SensorData ModelData { get; set; }

    [Parameter]
