		<AvgTemperature Type="conditional" SubType="float" Condition="isOn" Binding="AverageTemperature"></AvgTemperature>
		<AvgPowerConsumption Type="conditional" SubType="float" Condition="isOn" Binding="AveragePowerConsumption"></AvgPowerConsumption>
		<CurrentTemperature Type="conditional" SubType="float" Condition="isOn" Binding="CurrentTemperature"></CurrentTemperature>
		<CurrentHumidity Type="conditional" SubType="float" Condition="isOn" Binding="CurrentHumidity"></CurrentHumidity>
</Sensor>