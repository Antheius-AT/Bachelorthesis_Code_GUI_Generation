@page "/"
@using Models.UseCases.DisplayOnly.UseCase1
@using Radzen.Blazor
@if (content != null)
{
    @content    
}
@code {
    private RenderFragment? content;

    protected override void OnInitialized()
    {
        string specification = string.Empty;
        var emitter = new AUIEmitter();

        var data = new SensorData();
        specification = emitter.Emit(data, specification);

        var test = new CUIEmitter(data);

        content = test.Emit(specification);

    }
}
