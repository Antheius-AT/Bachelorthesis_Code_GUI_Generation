@using GeneratorSharedComponents.Abstractions
@using Models.Metadata

@inherits WidgetBase
@attribute [Editable]
@attribute [ValueKind(typeof(int))]

<span>@Label</span>
<Radzen.Blazor.RadzenNumeric @bind-Value="Value"></Radzen.Blazor.RadzenNumeric>
@code {
	private int value;

	[Parameter]
	public int Value
	{
		get
		{
			return value;
		}

		set
		{
			this.value = value;

			if (ValueChanged.HasDelegate)
			{
				ValueChanged.InvokeAsync(new ValueChangedArgs(value));	
			}
		}
	}
}
